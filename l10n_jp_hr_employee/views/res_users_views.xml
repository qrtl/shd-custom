<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_users_view_form_profile" model="ir.ui.view">
        <field name="name">res.users.preferences.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr.res_users_view_form_profile"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_submit" type="object" attrs="{'invisible': ['|', '|', ('state','!=','draft'), ('temp_save','!=',False), ('can_edit', '=', False)]}" string="Submit" class="oe_highlight"/>
                <button name="action_confirm" type="object" attrs="{'invisible': ['|', '|', ('can_edit', '=', False), ('state','!=','submit'), ('is_hr_manager','=',False)]}" string="Confirm" class="oe_highlight"/>
                <button name="action_draft" type="object" attrs="{'invisible': ['|', ('can_edit', '=', False), ('state', 'not in', ('submit', 'confirm'))]}" string="Set to Draft"/>
                <field name="is_hr_manager" invisible='1'/>
                <field name="state" widget="statusbar" clickable="0"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']/group" position="before">
                <div class="alert alert-info" role="alert" attrs="{'invisible': [('can_edit', '=', False)]}">
                    ・ご自身の情報を入力して下さい<br/>
                    ・"被扶養者情報"ブロックに扶養者を要する場合は入力して下さい<br/>
                    <br/>
                    ・入力後、「保存」→「申請」をクリックすると自動的にデータが送信され完了です<br/>
                    ・申請後、変更が発生した場合(住所変更等)は左上の「ドラフトに設定」で修正をお願いします<br/>
                    　修正後再度「保存」→「申請」クリックでデータを送信してください<br/>
                    <br/>
                    －青いフィールドは必須項目です<br/>
                    －「とりあえず保存」にチェックを入れると入力途中でも保存ができます<br/>
                </div>
            </xpath>
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <label for="family_name" string="Name"/>
                <div>
                    <div class="o_row mr16">
                        <field name="family_name" placeholder="Family Name"/>
                        <field name="given_name" placeholder="Given Name"/>
                    </div>
                </div>
                <label for="furi_family_name" string="Name Furigana"/>
                <div>
                    <div class="o_row mr16">
                        <field name="furi_family_name" placeholder="Family Name"/>
                        <field name="furi_given_name" placeholder="Given Name"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='department_id']" position="before">
                <field name="employment_type_id" widget="selection"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']/group/group[3]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='personal_information']/group/group[5]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_country_id']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_country_id']" position="before">
                <label for="roman_family_name" string="Roman Spelling"/>
                <div>
                    <div class="o_row mr16">
                        <field name="roman_family_name" placeholder="YAMADA" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                        <field name="roman_given_name" placeholder="TAROU" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                    </div>
                </div>
                <field name="country_code" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='birthday']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='gender']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_bank_account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='address_home_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='km_home_work']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
            </xpath>
             <xpath expr="//field[@name='place_of_birth']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='country_of_birth']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='private_email']" position="before">
                <label for="address_street" string="Address (Post Code / State)"/>
                <div class="o_address_format">
                    <div class="o_row mr16">
                        <field name="postal_code" placeholder="1020082" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                        <field name="address_pref" placeholder="Tokyo" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                    </div>
                </div>
                <field name="address_street" string="Street" placeholder="千代田区一番町１０－２２" class="o_address_street" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="building" placeholder="千代田一番町郵便局" class="o_address_street" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="furi_address" string="Street (Furi)" placeholder="チヨダク イチバンチョウ１０－２２" class="o_address_street" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="furi_building" placeholder="チヨダイチバンチョウユウビンキョク" class="o_address_street" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="residence_cert" filename="residence_cert_filename" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="residence_cert_filename" invisible="1"/>
                <field name="private_phone" placeholder="Remove hyphen" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='private_email']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
                <attribute name="placeholder">Lowercase letters</attribute>
            </xpath>
            <xpath expr="//field[@name='emergency_contact']" position="before">
                <label for="emerg_contact_type"/>
                <div>
                    <div class="o_row mr16">
                        <field name="emerg_contact_type" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                        <field name="emerg_contact_desc" attrs="{'invisible': [('emerg_contact_type','!=','other')],'required':[('emerg_contact_type','=','other'),('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='emergency_contact']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
                <attribute name="placeholder">山田　○○</attribute>
            </xpath>
            <xpath expr="//field[@name='emergency_phone']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
                <attribute name="placeholder">Remove hyphen</attribute>
            </xpath>
            <xpath expr="//field[@name='emergency_phone']" position="before">
                <field name="emerg_contact_postal_code" placeholder="Remove hyphen" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="emerg_contact_address" placeholder="Full-width Character" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='visa_no']" position="attributes">
                <attribute name="attrs">{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)], 'required':[('country_code','!=','JP'), ('temp_save','=',False)]}</attribute>
                <attribute name="placeholder">A1234567</attribute>
            </xpath>
            <xpath expr="//field[@name='visa_expire']" position="attributes">
                <attribute name="attrs">{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)], 'required':[('country_code','!=','JP'), ('temp_save','=',False)]}</attribute>
                <attribute name="placeholder">2025/01/01</attribute>
            </xpath>
            <xpath expr="//field[@name='permit_no']" position="attributes">
                <attribute name="attrs">{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)], 'required':[('country_code','!=','JP'), ('temp_save','=',False)]}</attribute>
                <attribute name="placeholder">12-345678</attribute>
            </xpath>
            <xpath expr="//field[@name='visa_expire']" position="after">
                <field name="residence_card" filename="residence_card_filename" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)], 'required':[('country_code','!=','JP'), ('temp_save','=',False)]}"/>
                <field name="residence_card_filename" invisible="1"/>
            </xpath>
            <xpath expr="//group[@name='work_permit']" position="after">
                <group name="bank_info" string="Bank Info">
                    <field name="bank_name" placeholder="三井住友銀行" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                    <field name="bank_branch" placeholder="神保町支店" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                    <field name="bank_acc_type" placeholder="Savings" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                    <field name="bank_acc_number" placeholder="1234567" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                    <field name="furi_bank_acc_holder" placeholder="ﾔﾏﾀﾞﾀﾛｳ" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='study_school']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
                <attribute name="placeholder">○○大学</attribute>
            </xpath>
            <xpath expr="//field[@name='study_field']" position="attributes">
                <attribute name="attrs">{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}</attribute>
                <attribute name="placeholder">○○学部○○○学科</attribute>
            </xpath>
            <xpath expr="//field[@name='certificate']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='study_school']" position="after">
                <field name="school_completion" widget="radio" options="{'horizontal': true}" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="school_completion_desc" placeholder="○○大学在学中、等あれば" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                <field name="year_left_school" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='identification_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='passport_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='personal_information']/group" position="after">
                <group name="qualification" string="Qualifications">
                    <div>
                        <div>
                            <field name="qualification_ids" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                            <div>E.g. Name: CISA, Date Obtained: 2018/03/01, Valid Until: 2019/02/28, Reference: 1234567</div>
                        </div>
                    </div>
                </group>
                <group>
                    <group name="pension_info" string="Pension Info">
                        <label for="pension_code" string="Pension Number (?)" class="oe_edit_only"/>
                        <div class="o_row mr16 oe_edit_only">
                            <field name="pension_code" placeholder="9999" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/><span>-</span>
                            <field name="pension_seq" placeholder="999999" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                        </div>
                        <label for="pension_number" class="oe_read_only"/>
                        <div class="o_row mr16 oe_read_only">
                            <field name="pension_number"/>
                        </div>
                    </group>
                    <group name="employment_info" string="Employment Info">
                        <label for="emp_ins_number_1st" string="Emp. Insurance Number (?)" class="oe_edit_only"/>
                        <div class="o_row mr16 oe_edit_only">
                            <field name="emp_ins_number_1st" placeholder="9999" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/><span>-</span>
                            <field name="emp_ins_number_2nd" placeholder="999999" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/><span>-</span>
                            <field name="emp_ins_number_3rd" placeholder="9" attrs="{'required':[('temp_save','=',False)],'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                        </div>
                        <label for="emp_ins_number" class="oe_read_only"/>
                        <div class="o_row mr16 oe_read_only">
                            <field name="emp_ins_number"/>
                        </div>
                    </group>
                </group>
                <group name="dependant_information" string="Dependant Information (Social Insurance)">
                    <div>
                        <div>
                            <field name="dependant_ids" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                        </div>
                    </div>
                </group>
                <group>
                    <field name="note" attrs="{'readonly':['|', ('state','!=','draft'), ('can_edit','=',False)]}"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='personal_information']/group" position="before">
                <group name="temp_save" attrs="{'invisible': [('can_edit', '=', False)]}">
                    <field name="temp_save" attrs="{'readonly':[('state','!=','draft')]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
